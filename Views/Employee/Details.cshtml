@model Employee;

@{
    ViewData["Title"] = "Detail Page";
}

<div class="container justify-content-center">
    <div class="row">
        <div class="col-md-6 border">

            <h3 class="border border-light">@Model.Name</h3>
            @if (Model.PhotoPath != null)
            {
                <img class="card-img-top" src="~/img/@Model.PhotoPath" />
            }
            else
            {
                <img class="card-img-top" src="~/img/noimage.png" />
            }
            <div class="row justify-content-center">
                <a class="col-md-2 my-2 mx-1 btn btn-primary" asp-action="Index" asp-controller="Home">Back</a>
                <a class="col-md-2 my-2 mx-1 btn btn-primary" asp-route-id="@Model.Id" asp-action="Edit" asp-controller="Employee">Edit</a>
                <a class="col-md-2 my-2 mx-1 btn btn-danger" asp-route-id="@Model.Id" asp-action="DeleteBtn" asp-controller="Employee">Delete</a>
            </div>

        </div>
    </div>
</div>
