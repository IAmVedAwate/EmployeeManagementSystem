@model EmployeeEditModelView

@{
    ViewData["Title"] = "Delete";
    string filePath = "~/img/" + (Model.ExistingPhotoPath ?? "noimage.png");
}
<div class="border border-secondary p-4">
    <form method="post" class="form" enctype="multipart/form-data">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />

        <div class="form-group m-2">
            <label asp-for="Name" class="control-label"></label>
            <h5>@Model.Name</h5>
        </div>

        <div class="form-group m-2">
            <label asp-for="Email" class="control-label"></label>
            <h5>@Model.Email</h5>
        </div>

        <div class="form-group m-2">
            <label asp-for="Department" class="control-label"></label>
            <h5>@Model.Department</h5>
        </div>
        <div>
        @if (Model.ExistingPhotoPath != null)
        {
            <img class="card-img-top edit_frame" src="~/img/@Model.ExistingPhotoPath" />
        }
        else
        {
            <img class="card-img-top edit_frame" src="~/img/noimage.png" />
        }
        </div>
        <button type="submit" class="my-2 mx-1 btn btn-danger">Delete</button>
        <button type="button" class="my-2 mx-1 btn btn-primary" asp-action="EmployeeDetails" asp-controller="Employee">Cancel</button>
    </form>
</div>